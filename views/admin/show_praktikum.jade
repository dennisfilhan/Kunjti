extends layout

block title
	| Modul &mdash; Admin

block content
	.row
		.span6
			.widget.widget-nopad
				.widget-header
					i.icon-info-sign
					h3  Information
				.widget-content
					form.form-horizontal(style='padding:15px;')
						.control-group
							label.control-label Lab
							.controls
								span.disabled= praktikum.Lab.id
						.control-group
							label.control-label Nama Praktikum
							.controls
								span.disabled= praktikum.nama

						.control-group
							label.control-label Jumlah Modul
							.controls
								span.disabled
									= praktikum.jumlah_modul 
									|  &middot; ( 
									= praktikum.Moduls.length+')'
						.control-group
							label.control-label Jumlah Asisten
							.controls
								span.disabled= praktikum.jumlah_modul
						.control-group
							label.control-label Jumlah Praktikan
							.controls
								span.disabled= praktikum.jumlah_modul
						.control-group
							label.control-label Jumlah Shift
							.controls
								span.disabled= praktikum.jumlah_modul
						.control-group
							label.control-label Deskripsi
							.controls
								span.disabled= praktikum.description
		.span6
			.widget.widget-nopad
				.widget-header
					i.icon-list-alt
					h3  Daftar Modul
				.widget-content
					.widget-content(style='padding:10px;')
						table.table.table-striped.table-bordered
							thead
								tr
									th Nomor
									th Modul
									th Komponen
									th Praktikan
									th 
								tbody
									- each modul, m in praktikum.Moduls
										tr
											td= (modul.nomor)
											td 
												a(href='/admin/modul/'+modul.id)
													= (modul.nama)
											td= Object.keys(modul.Units).length
											td 0
											td.td-actions(style='text-align:center;')
												//- a.btn.btn-small.btn-success(href='javascript:;')
												//- 	i.btn-icon-only.icon-pencil
												//- span(style='display:inline-block; width:20px;')
												//- a.btn.btn-danger.btn-small(href='/admin/modul/'+modul.id+'/delete')
													i.btn-icon-only.icon-remove